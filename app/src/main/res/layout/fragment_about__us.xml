                        android:shadowRadius="10"
                        android:text="Fuel Alert"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ab6"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="Alert Driver"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>


            </LinearLayout>
        </HorizontalScrollView>




        <androidx.cardview.widget.CardView

            android:id="@+id/vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/H2scroll"
            app:layout_constraintBottom_toTopOf="@id/Hscroll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">


                <TextView
                    android:id="@+id/visiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet Our Team"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
