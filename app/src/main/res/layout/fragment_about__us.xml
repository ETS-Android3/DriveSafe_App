                    app:layout_constraintTop_toTopOf="parent" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/textlas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDriveSafe improves driving in real-time using the power of advanced smartphones. The app uses the smartphone's native camera and sensors to detect vehicles in front of the vehicle, alerting drivers when they are in danger. Mobile carriers have also taken an active interest in IDriveSafe"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textdrive"
                    android:layout_marginLeft="14dp" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

