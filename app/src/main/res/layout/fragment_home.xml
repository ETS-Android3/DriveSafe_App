                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 3"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about4"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 4"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>




                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about5"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 5"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>




        <androidx.cardview.widget.CardView

            android:id="@+id/vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/H2scroll"
            app:layout_constraintBottom_toTopOf="@id/Hscroll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">


                <TextView
                    android:id="@+id/visiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/textaboutvision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our vision is to develop an app for drivers who are affected by the road accidents while driving in a state of tiredness and drowsiness. IDriveSafe App is a dual camera sensing app for android phones that will use machine learning algorithms to check tiredness and drowsiness of the drivers."
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/visiontext"
                    android:layout_marginLeft="14dp" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:id="@+id/H2scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/Mision"
            app:layout_constraintTop_toBottomOf="@id/vision"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about1"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 1"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>




                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about2"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 2"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>





                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about3"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 3"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about4"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 4"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>




                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/about5"
                        app:riv_corner_radius="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_8sdp"
                        android:shadowColor="@color/colorPrimary2"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="10"
                        android:text="About 5"
                        android:textColor="#fff"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"/>

                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView

            android:id="@+id/Mision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/H2scroll"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp">


                <TextView
                    android:id="@+id/misiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mision"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/textaboutmision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iDriveSafe is a mobile safety application designed to warn you of potential collisions when you're driving. Using you smartphone's camera, iDriveSafe is able to detect the surrounding traffic, and alert you if it begins to sense danger ahead."
                    android:textColor="@color/colorPrimary2"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/misiontext"
                    android:layout_marginLeft="14dp" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>